<div class="row">
  <div class="col-12">
    <div
      class="px-3 py-4 mb-3 rounded d-flex flex-row justify-content-center align-items-center navbar-detached bg-navbar-theme"
      id="layout-navbar"
    >
      <h3 class="m-0"><%- result.title %></h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body demo-vertical-spacing demo-only-element">
        <form
          action="/admin/post-update"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label"
              >Title</label
            >
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="title"
              value="<%- result.title %>"
            />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label"
              >Description</label
            >
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="desc"
              value="<%- result.desc %>"
            />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label">Tags</label>
            <input
              id="tagsInput"
              class="form-control"
              name="tags"
              value="<%- tags %>"
            />
          </div>
          <div class="mb-3">
            <div class="mb-4 d-flex justify-content-center">
              <img
                id="mainImg"
                src="<%- result.mainImg %>"
                alt="example placeholder"
                style="width: 300px"
              />
            </div>
            <div class="d-flex justify-content-center">
              <div class="btn btn-primary btn-rounded">
                <label
                  role="button"
                  class="form-label text-white m-1"
                  for="customFile4"
                  >Choose file</label
                >
                <input
                  type="file"
                  class="form-control d-none"
                  id="customFile4"
                  onchange="displaySelectedImage(this, 'mainImg')"
                />
                <input
                  type="hidden"
                  id="mainImg0"
                  name="mainImg"
                  value="<%- result.mainImg %>"
                />
              </div>
            </div>
          </div>







          <input type="hidden" name="itemNew" value="<%= item.id %>" />
          <input type="hidden" name="id" value="<%= result.id %>" />
          <textarea id="summernote" name="editdata">
<%- result.content %></textarea
          >
          <div class="mt-3">
            <label for="item" class="form-label">Choose Category</label>
            <select class="form-select" id="item" name="item" required>
              <option value="" disabled selected>Choose...</option>
              <% items.forEach(function(item) { %>
              <option value="<%= item._id %>"><%= item.name %></option>
              <% }); %>
            </select>
          </div>
          <div class="text-center">
            <button class="btn btn-primary my-3">
              <i class="menu-icon tf-icons bx bx-share"></i>Share
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
